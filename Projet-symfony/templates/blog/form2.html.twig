{% extends "base.html.twig" %}

{% form_theme forme 'bootstrap_4_layout.html.twig' %}

{% block body %}

    {{form_start(forme)}}

    <br>

    <div class="form-group row">

        <div class="col-md-6">

            <h4> AJOUTER UNE SERVICE </h4>

            {{ form_widget(forme.libelle, {'attr':{'placeholder': "Nom service"}}) }}

        </div>

    </div>

    <button type="submit" class="btn btn-success col-md-2"> 
        {% if modd %}
            MODIFIER
        {% else %}
            AJOUTER
        {% endif %}
    </button>
    {{form_end(forme)}}
    <br> 
    
    <table class="table table-hover">
    <thead>
        <th scope="row">NOM DU SERVICE</th>
        <th scope="row">MODIFIER</th>
        {# <th scope="row">Supprimer</th> #}
    </thead>

    <tbody>

        {% for service in reqserv %}

        <tr class="table-Secondary">
            <td scope="row">{{service.libelle}} </td>
            <td scope="row"> 
              <button class="btn btn-success" color="white"><a href="/form2/{{service.id}}/modif" style="color:white; text-decoration:none;">
              MODIFIER</a></button>  
            </td>
            {# <td scope="row"> 
              <button class="btn btn-danger"><a href="/form2/{{service.id}}/supser" style="color:white;">
              SUPPRIMER</a></button>  
            </td> #}
        </tr>
        {% endfor %}

    </tbody>
    </table>
    
{% endblock %}